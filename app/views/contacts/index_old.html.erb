<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email Address</th>
      <th>Organization</th>
      <th>Title</th>
      <th>Phone Number</th>
			<th>Affiliation</th>
      <th>Member</th>
			<th>Speaker</th>
			<th>Events / Luncheons</th>
			<th>Golf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to contact.first_name, edit_contact_path(contact) %></td>
        <td><%= link_to contact.last_name, edit_contact_path(contact) %></td>
        <td><%= contact.email_address %></td>
        <td><%= contact.organization %></td>
				<td><%= contact.title %></td>
				<td><%= contact.phone_number %></td>
				<td><%= contact_affiliation_name(contact.affiliation_id) %></td>
        <td><%= contact.member %></td>
				<td><%= contact.speaker %></td>
				<td><%= contact.events %></td>
				<td><%= contact.golf %></td>
        <!-- td>< %= link_to 'Show', contact % ></td -->
        <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

