<div class="container-fluid">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

			<%= form_for(contact) do |f| %>
			  <% if contact.errors.any? %>
					<div class="alert alert-danger" role="alert">
			      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

			      <ul>
			      <% contact.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

				<div class="container">
					<div class="row">
					  <div class="col-xs-12 col-sm-4">
					   	<%= f.label :first_name %>
					    <%= f.text_field :first_name %>
					  </div>
					  <div class="col-xs-12 col-sm-4">
					   	<%= f.label :last_name %>
					    <%= f.text_field :last_name %>
					  </div>
					  <div class="col-xs-12 col-sm-4">
					  </div>
					</div>

					<div class="row">
					  <div class="col-xs-12 col-sm-4">
					    <%= f.label :organization %>
					    <%= f.text_field :organization %>
					  </div>
					  <div class="col-xs-12 col-sm-4">
					    <%= f.label :title %>
					    <%= f.text_field :title %>
					  </div>
					  <div class="col-xs-12 col-sm-4">
					  </div>
					</div>

					<div class="row">
						<div class="col-xs-12 col-sm-4">
					    <%= f.label :email_address %>
					    <%= f.text_field :email_address %>
						</div>
						<div class="col-xs-12 col-sm-4">
					    <%= f.label :phone_number %>
					    <%= f.text_field :phone_number %>
			  		</div>
						<div class="col-xs-12 col-sm-4">
						</div>
					</div>

					<div class="row">
						<div class="col-xs-12 col-sm-12">
					    <%= f.label :affiliation_id %>
					    <%= f.collection_select :affiliation_id, Affiliation.order(:name),:id,:name, include_blank: true, :remote => true %>
			  		</div>
					</div>

					<div class="row">
						<div class="col-xs-12 col-sm-2">
					    <%= f.label :member %>
					    <%= f.check_box :member %>
			  		</div>
						<div class="col-xs-12 col-sm-2">
					    <%= f.label :speaker %>
					    <%= f.check_box :speaker %>
			  		</div>
						<div class="col-xs-12 col-sm-2">
					    <%= f.label :events %>
					    <%= f.check_box :events %>
			  		</div>
						<div class="col-xs-12 col-sm-2">
					    <%= f.label :golf %>
					    <%= f.check_box :golf %>
			  		</div>
						<div class="col-xs-12 col-sm-2">
					    <%= f.label :sponsorship %>
					    <%= f.check_box :sponsorship %>
			  		</div>
					</div>
					
					<div class="row">
						<div class="col-xs-12 col-sm-12">
					    <%= f.label :comments %>
					    <%= f.text_area :comments, cols: 75, rows: 2 %>
			  		</div>
					</div>
				</div>

				<%= f.submit :class => "btn btn-default btn-xs" %>

			<% end %>
			</div>
		</div>
</div>