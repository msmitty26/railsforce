<div class="container-fluid">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

			<%= form_for(contact) do |f| %>
			  <% if contact.errors.any? %>
					<div class="alert alert-danger" role="alert">
			      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

			      <ul>
			      <% contact.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

				<div class="container">
					<div class="row">
					  <div class="col-sm-4">
					   	<div class="col-sm-4"><%= f.label :first_name %>:</div>
					    <div class="col-sm-4"><%= f.text_field :first_name %></div>
					  </div>
					  <div class="col-sm-4">
					   	<div class="col-sm-4"><%= f.label :last_name %>:</div>
					    <div class="col-sm-4"><%= f.text_field :last_name %></div>
					  </div>
					  <div class="col-sm-4">
					  </div>
					</div>

					<div class="row">
					  <div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :organization %>:</div>
					    <div class="col-sm-4"><%= f.text_field :organization, size: 30 %></div>
					  </div>
					  <div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :title %>:</div>
					    <div class="col-sm-4"><%= f.text_field :title, size: 30 %></div>
					  </div>
					  <div class="col-sm-4">
					  </div>
					</div>

					<div class="row">
						<div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :email_address %>:</div>
					    <div class="col-sm-4"><%= f.text_field :email_address, size: 30 %></div>
						</div>
						<div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :phone_number %>:</div>
					    <div class="col-sm-4"><%= f.text_field :phone_number %></div>
			  		</div>
						<div class="col-sm-4">
						</div>
					</div>

					<div class="row">
						<div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :affiliation_id %>:</div>
					    <div class="col-sm-4"><%= f.collection_select :affiliation_id, Affiliation.order(:name),:id,:name, include_blank: true, :remote => true %></div>
			  		</div>
					</div>

					<div class="row">
						<div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :member %>:</div>
					    <div class="col-sm-4"><%= f.check_box :member %></div>
			  		</div>
						<div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :speaker %>:</div>
					    <div class="col-sm-4"><%= f.check_box :speaker %></div>
			  		</div>
						<div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :events %>:</div>
					    <div class="col-sm-4"><%= f.check_box :events %></div>
			  		</div>
						<div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :golf %>:</div>
					    <div class="col-sm-4"><%= f.check_box :golf %></div>
			  		</div>
						<div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :sponsorship %>:</div>
					    <div class="col-sm-4"><%= f.check_box :sponsorship %></div>
			  		</div>
					</div>
					
					<div class="row">
						<div class="col-sm-4">
					    <div class="col-sm-4"><%= f.label :comments %>:</div>
					    <div class="col-sm-4"><%= f.text_area :comments, cols: 75, rows: 2 %></div>
			  		</div>
					</div>
				</div>

				<%= f.submit :class => "btn btn-default btn-xs" %>

			<% end %>
			</div>
		</div>
</div>